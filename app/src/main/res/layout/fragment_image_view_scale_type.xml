<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imageScaleType_layoutView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            style="@android:style/TextAppearance.Medium"
            android:id="@+id/imageScaleType_infoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Change ImageView height to see scaleType effect"/>

        <FrameLayout
            style="@style/ImageViewScaleTypeLayout">
            <ImageView
                style="@style/ImageViewScaleType"
                android:onClick="toastScaleType"
                android:scaleType="center"/>
            <TextView
                style="@style/ImageViewScaleTypeInfoText"
                android:text="center"/>
        </FrameLayout>

        <FrameLayout
            style="@style/ImageViewScaleTypeLayout">
            <ImageView
                style="@style/ImageViewScaleType"
                android:scaleType="centerInside"/>
            <TextView
                style="@style/ImageViewScaleTypeInfoText"
                android:text="centerInside"/>
        </FrameLayout>

        <FrameLayout
            style="@style/ImageViewScaleTypeLayout">
            <ImageView
                style="@style/ImageViewScaleType"
                android:scaleType="centerCrop"/>
            <TextView
                style="@style/ImageViewScaleTypeInfoText"
                android:text="centerCrop"/>
        </FrameLayout>

        <FrameLayout
            style="@style/ImageViewScaleTypeLayout">
            <ImageView
                style="@style/ImageViewScaleType"
                android:scaleType="fitXY"/>
            <TextView
                style="@style/ImageViewScaleTypeInfoText"
                android:text="fitXY"/>
        </FrameLayout>

        <FrameLayout
            style="@style/ImageViewScaleTypeLayout">
            <ImageView
                style="@style/ImageViewScaleType"
                android:scaleType="fitStart"/>
            <TextView
                style="@style/ImageViewScaleTypeInfoText"
                android:text="fitStart"/>
        </FrameLayout>

        <FrameLayout
            style="@style/ImageViewScaleTypeLayout">
            <ImageView
                style="@style/ImageViewScaleType"
                android:scaleType="fitCenter"/>
            <TextView
                style="@style/ImageViewScaleTypeInfoText"
                android:text="fitCenter"/>
        </FrameLayout>

        <FrameLayout
            style="@style/ImageViewScaleTypeLayout">
            <ImageView
                style="@style/ImageViewScaleType"
                android:scaleType="fitEnd"/>
            <TextView
                style="@style/ImageViewScaleTypeInfoText"
                android:text="fitEnd"/>
        </FrameLayout>


        <FrameLayout
            style="@style/ImageViewScaleTypeLayout">
            <ImageView
                style="@style/ImageViewScaleType"
                android:scaleType="matrix"/>
            <TextView
                style="@style/ImageViewScaleTypeInfoText"
                android:text="matrix"/>
        </FrameLayout>

    </LinearLayout>

</ScrollView>
